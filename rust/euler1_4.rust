// Euler1 in Rust

fn is_euler1(n: i32) -> bool {
    n%3 == 0 || n%5 == 0
}

fn euler1(n: i32, acc: i32) -> i32 {
    let x = n;
    match x {
        x if x == 1       => acc,
        x if is_euler1(x) => euler1(n-1, acc+n),
        _                 => euler1(n-1, acc)
    }
}

fn main() {
    println!("Euler1 = {}", euler1(1000));
}
